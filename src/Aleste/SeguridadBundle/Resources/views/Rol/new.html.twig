{% extends "TrackerBundle::layout.html.twig" %}

{% form_theme form 'AlesteGeneratorBundle:widget:fields.html.twig' %}    
{% block content %}
<div class="container">
   <div class="row">
    <h4 class="pull-left">{{'_crear_rol'|trans}}</h4>
     <a class="btn btn-warning pull-right" href="{{ path('rol_filter') }}">
	 <i class="fa fa-arrow-left"></i> {{ '_volver_listado'|trans }}
     </a>
   </div>
  <div class="row">   
  <form class="form-horizontal well" action="{{ path('rol_create') }}" method="post" {{ form_enctype(form) }}>
	<div class="form-group">
	 <div class="col-lg-2 control-label">{{ form_label(form.nombre)}}</div>
	 <div class="col-lg-6">{{ form_widget(form.nombre)}}</div>
	 <div class="col-lg-2">{{ form_errors(form.nombre)}}</div>
	</div>
        {{form_rest(form)}}
        <div class="col-sm-offset-2">	 
	  <button class="btn btn-success">
	   {{'_crear'|trans}} <i class="fa fa-plus"></i> 
	  </button>
	</div>
       </div>
    </form>
  </div>
</div><!-- <div class="container"-->
{% endblock %}