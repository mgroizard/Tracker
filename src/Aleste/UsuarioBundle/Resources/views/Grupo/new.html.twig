{% extends "GestionBundle::layout.html.twig" %}
{% form_theme form 'AlesteGeneratorBundle:widget:fields.html.twig' %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Grupo'}, 'admin') }}{% endblock %}

{% block content %}


<div class="well well-sm bs-component col-lg-6">
<legend>Nuevo grupo</legend>  

    <form action="{{ path('gestion_grupo_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> {{ 'Save'|trans({}, 'admin') }}</button>
        </p>
    </form>
        <p>
        <a class="btn btn-info" href="{{ path('gestion_grupo') }}">
            <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
        </a>          
        </p>    
</div>

{% endblock %}