{% extends "GestionBundle::layout.html.twig" %}
{% form_theme edit_form 'AlesteGeneratorBundle:widget:fields.html.twig' %}

{% block title %}Editar usuario{% endblock %}

{% block content %}

<div class="well well-sm bs-component col-lg-6">
<legend>Editar usuario</legend>
  
        <form action="{{ path('gestion_usuario_update', {id: usuario.id}) }}" method="post" {{ form_enctype(edit_form) }} >
        <div class="row">
            <div class="col-md-6">{{ form_row(edit_form.apellido) }}</div>
            <div class="col-md-6">{{ form_row(edit_form.nombre) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(edit_form.tipoDocumento) }}</div>
            <div class="col-md-4">{{ form_row(edit_form.nroDoc) }}</div>
            <div class="col-md-6">{{ form_row(edit_form.sexo) }}</div>
        </div>   
        <div class="row">
            <div class="col-md-12">{{ form_row(edit_form.coordinaciones) }}</div>            
        </div>      
        <div class="row">
            <div class="col-md-6">{{ form_row(edit_form.username) }}</div>
            <div class="col-md-6">{{ form_row(edit_form.email) }}</div>
        </div>   
        <div class="row">
            <div class="col-md-6">{{ form_row(edit_form.roles) }}</div>
            <div class="col-md-6">{{ form_row(edit_form.grupos) }}</div>
        </div>              
        <div class="row">
            <div class="col-md-3">{{ form_row(edit_form.enabled) }}</div>            
            <div class="col-md-3">{{ form_row(edit_form.recibeNotificaciones) }}</div>
        </div>                      
        {{ form_rest(edit_form) }}
    
        <p>
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> {{ 'Save'|trans({}, 'admin') }}</button>
        </p>
    </form>

        <form id="delete" action="{{ path('gestion_usuario_delete', {id: usuario.id}) }}" method="post">
    {{ form_widget(delete_form) }}

    <div class="btn-group record_actions">

        <a class="btn btn-info" href="{{ path('gestion_usuario') }}">
            <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
        </a>


        <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}</button>

    </div>

    <input name="modal" type="hidden" value="0">
</form>

<div id="delete_confirm" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
            </div>
            <div class="modal-body">
                <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}, {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>
                <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                <button class="btn btn-secondary" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
            </div>
        </div>
    </div>
</div>
  
</div>

{% endblock %}
