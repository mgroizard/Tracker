{% extends 'TrackerBundle::layout.html.twig' %}
{% block navbar %} {% include 'TrackerBundle:Gestion:_menu_solo.html.twig' %}{% endblock %}
{% block content %} 
<div class="container-fluid">

<div class="row">
    <div class="col-md-8">        
        <img src="{{ asset('bundles/gestion/images/carpetas.jpg') }}" height="100%" />
    </div>

    <div class="col-md-4">

        <div class="well bs-component">
        <h4>{{ global.app.organizacion_largo }}</h4>  
        <hr>          
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>  
   <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="Nombre de usuario ó email" />
</div>
<br>
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-key"></i> </span>  
   <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="Contraseña" />
</div>
<br>
<a href="{{path('fos_user_resetting_request')}}">No recuerdo mi contraseña</a>
<br>
<br>
    <button type="submit" class="btn btn-default" id="_submit" name="_submit">Ingresar</button>
    
    
</form>       
      </div>    
</div>
    </div>
</div>


</div>

{% endblock %}






